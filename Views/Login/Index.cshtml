@{
    ViewBag.Title = "Autentificare";
}

<div class="container mt-5">
    <div class="d-flex justify-content-center align-items-center mb-4">
        <h2>Autentificare</h2>
    </div>

    <div class="p-4 border rounded shadow-sm bg-light" style="max-width: 500px; margin: auto;">
        <form method="post" asp-action="Index">
            <div class="mb-3 d-flex justify-content-center">
                <div class="form-check me-3">
                    <input class="form-check-input" type="radio" name="tipUtilizator" value="client" id="clientRadio" checked>
                    <label class="form-check-label" for="clientRadio">Client</label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="tipUtilizator" value="hotel" id="hotelRadio">
                    <label class="form-check-label" for="hotelRadio">Hotel</label>
                </div>
            </div>

            <div class="mb-3">
                <label class="form-label">Email / CUI</label>
                <input type="text" name="identificator" class="form-control" required />
            </div>
            <div class="mb-3">
                <label class="form-label">Parolă</label>
                <input type="password" name="parola" class="form-control" required />
            </div>

            <div class="text-center">
                <button type="submit" class="btn btn-primary px-4">LOGIN</button>
            </div>

            @if (ViewBag.Eroare != null)
            {
                <div class="alert alert-danger mt-3 text-center">@ViewBag.Eroare</div>
            }

            <div class="mt-3 text-center">
                <small>
                    Nu ai cont?
                    <a href="#" onclick="redirectToRegister()">Înregistrează-te!</a>
                </small>
            </div>
        </form>
    </div>
</div>

<script>
    function redirectToRegister() {
        const isClient = document.getElementById('clientRadio').checked;
        if (isClient) {
            window.location.href = "/Client/Register";
        } else {
            window.location.href = "/Hotel/Register";
        }
    }
</script>
