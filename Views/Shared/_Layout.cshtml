<!DOCTYPE html>
<html lang="ro">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title - AgentieTurism</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    @{
        var rol = Context.Session.GetString("Rol");
    }
    <nav class="navbar navbar-expand-lg navbar-light bg-light px-4">
        @{
            var redirectUrl = rol == "client" ? "/Home/ClientHome"
            : rol == "hotel" ? "/Home/HotelHome"
            : "/Home/Index";
        }
        <a class="navbar-brand fw-bold" href="@redirectUrl">✈️ Agenție de turism</a>
        <div class="collapse navbar-collapse justify-content-end">
            <ul class="navbar-nav">
                @if (rol == null)
                {
                    <li class="nav-item mx-2">
                        <a class="nav-link" href="/Client/Register">Înregistrare Client</a>
                    </li>
                    <li class="nav-item mx-2">
                        <a class="nav-link" href="/Hotel/Register">Înregistrare Hotel</a>
                    </li>
                    <li class="nav-item mx-2">
                        <a class="nav-link" href="/Login/Index">Login</a>
                    </li>
                }
                else
                {
                    <li class="nav-item mx-2">
                        <form method="post" action="/Login/Logout" class="d-inline">
                            <button type="submit" class="btn btn-link nav-link text-danger">Delogare</button>
                        </form>
                    </li>
                }
            </ul>

        </div>
    </nav>

    <main class="container mt-4">
        @RenderBody()
    </main>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    @if (!string.IsNullOrEmpty(rol))
    {
        @if (rol == "client")
        {
            <div style="position: fixed; bottom: 20px; right: 20px; z-index: 1000;">
                <span title="Ești autentificat ca client" class="text-success fs-1">&#10004;</span>
            </div>
        }
        else if (rol== "hotel")
        {
            <div style="position: fixed; bottom: 20px; right: 20px; z-index: 1000;">
                <span title="Ești autentificat ca administrator" class="text-success fs-1">&#10004;</span>
            </div>
        }
    }
    @RenderSection("Scripts", required: false)
</body>
</html>
